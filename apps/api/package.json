{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "dev": "sh -c \"npm run docker:up && ./wait-for-it.sh localhost:3306 -t 0 && NODE_ENV=test nodemon src/index.ts\"",
    "dev_old": "rm -rf ./dist && mkdir ./dist && cp ./.env* ./dist/ && npm run docker:up && sleep 10 && npx tsc && NODE_ENV=test node dist/index.js",
    "dev:online": "rm -rf ./dist && npx tsc && node dist/index.js",
    "docker:up": "docker compose --env-file ./.env.test up -d",
    "docker:down": "docker compose down",
    "test": "npm run docker:up && jest && npm run docker:down",
    "tdd": "npm run docker:up && ./wait-for-it.sh localhost:3306 && jest --watch && npm run docker:down",
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "eslint --fix \"**/*.{js,ts,tsx}\"",
    "prettier": "prettier \"**/*.{js,ts,tsx,md,html,css,scss,json}\" --check --loglevel warn",
    "prettier:fix": "prettier \"**/*.{js,ts,tsx,md,html,css,scss,json}\" --write --loglevel warn",
    "fix": "npm run lint:fix && npm run prettier:fix",
    "ts:check": "tsc --noEmit"
  },
  "author": "",
  "license": "ISC",
