    "@fastify/url-data": "^5.1.0",
    "@swc/core": "^1.3.14",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.8",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@fastify/mysql": "^4.0.0",
    "@fastify/websocket": "^7.1.1",
    "dotenv": "^16.0.3",
    "fastify": "^4.9.2",
    "mysql2": "^2.3.3",
    "planning-poker-types": "*",
    "zod": "^3.19.1"
  }
